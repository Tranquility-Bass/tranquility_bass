<section>
  {{#if hasError}}
  <p>{{error}}</p>
  {{/if}}
  <h3>{{discussionTitle}}</h3>
  <p>{{discussionBody}}</p>
  <form id="comment-form" action="/private/create/comment/{{discussionId}}" method="POST">
    <textarea id="commentResponse" name="commentResponse" rows="10" cols="40">Enter your comment here.</textarea>
    <button type="submit">Post</button>
  </form>
</section>