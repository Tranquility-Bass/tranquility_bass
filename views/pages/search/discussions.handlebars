<h1> {{title}} </h1>
<section>
	<h2>{{artist}}</h2>
	
	{{#if album}}
        <h3>{{album}}</h3>
    {{/if}}
	
	{{#if song}}
        <h3>{{song}}</h3>
    {{/if}}
	
    <h5>{{discussion}}</h5>
	
	<p>Date Posted: {{date_posted}}</p>

    {{#if emptyComments}}
        <p>No Comments Found for this Discussion</p>
    {{/if}}

    {{#each comments}}
		<h6>{{username}}</h6>
        <h7>
            <p>{{body}}</p>
        </h7>
    {{/each}}

    <p><a href="/private/create/comment/{{discussionId}}">Post a Comment</a></p>
	
</section>
